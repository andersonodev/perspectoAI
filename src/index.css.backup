
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    /* Paleta de Cores: "Excelência Acadêmica" */
    
    /* Tons Neutros e de Fundo */
    --background: 48 33% 96%; /* Creme Claro */
    --foreground: 220 13% 20%; /* Cinza-Chumbo Quente */
    
    --card: 48 33% 96%; /* Creme Claro */
    --card-foreground: 220 13% 20%;
    
    --popover: 48 33% 96%;
    --popover-foreground: 220 13% 20%;

    --muted: 220 13% 91%; /* Cinza-Gelo */
    --muted-foreground: 220 9% 45%; /* Cinza-Médio */

    --border: 220 13% 88%;
    --input: 220 13% 88%;
    
    /* Cor Primária (Azul Ardósia) */
    --primary: 215 39% 35%;
    --primary-foreground: 0 0% 100%;

    /* Cor Secundária (Dourado Queimado) */
    --secondary: 35 78% 46%;
    --secondary-foreground: 0 0% 100%;
    
    /* Cor de Destaque (Accent) */
    --accent: 220 13% 91%; /* Cinza-Gelo para hover */
    --accent-foreground: 220 13% 15%;
    
    /* Cores de Ação */
    --destructive: 0 72% 51%;
    --destructive-foreground: 0 0% 100%;
    --success: 142 76% 36%;
    --success-foreground: 0 0% 100%;
    --warning: 38 92% 50%;
    --warning-foreground: 24 9.8% 10%;
    
    /* Outros */
    --ring: 215 39% 35%;
    --radius: 0.5rem;
  }

  .dark {
    /* Paleta de Cores: "Excelência Acadêmica" - Modo Escuro */
    
    /* Tons Neutros e de Fundo */
    --background: 220 13% 12%; /* Cinza-Chumbo Muito Escuro */
    --foreground: 210 20% 90%; /* Cinza-Claro Quente */
    
    --card: 220 13% 18%;
    --card-foreground: 210 20% 90%;
    
    --popover: 220 13% 12%;
    --popover-foreground: 210 20% 90%;

    --muted: 220 13% 22%;
    --muted-foreground: 210 15% 65%;

    --border: 220 13% 22%;
    --input: 220 13% 22%;
    
    /* Cor Primária (Azul Ardósia - Modo Escuro) */
    --primary: 215 39% 65%;
    --primary-foreground: 220 13% 12%;

    /* Cor Secundária (Dourado Queimado - Modo Escuro) */
    --secondary: 35 78% 51%;
    --secondary-foreground: 220 13% 12%;
    
    /* Cor de Destaque (Accent - Modo Escuro) */
    --accent: 220 13% 22%;
    --accent-foreground: 210 20% 98%;
    
    /* Cores de Ação (Modo Escuro) */
    --destructive: 0 72% 51%;
    --destructive-foreground: 0 0% 100%;
    --success: 142 76% 40%;
    --success-foreground: 0 0% 100%;
    --warning: 38 92% 55%;
    --warning-foreground: 220 13% 12%;

    /* Outros */
    --ring: 215 39% 65%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
