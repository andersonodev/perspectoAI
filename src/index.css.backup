@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
    font-feature-settings: "rlig" 1, "calt" 1;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
  }

  /* Clean Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    @apply bg-gray-100;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-gray-300 rounded-full;
  }

  ::-webkit-scrollbar-thumb:hover {
    @apply bg-gray-400;
  }
}

/* Academic Excellence Components */
@layer components {
  .academic-card {
    @apply bg-card border border-border shadow-lg rounded-xl backdrop-blur-sm;
  }

  .educator-button {
    @apply bg-gradient-to-r from-slate-700 to-slate-800 hover:from-slate-800 hover:to-slate-900 text-white font-medium px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300;
  }

  .excellence-button {
    @apply bg-gradient-to-r from-amber-600 to-amber-700 hover:from-amber-700 hover:to-amber-800 text-white font-medium px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300;
  }

  .student-button {
    @apply bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white font-medium px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300;
  }

  .academic-gradient-bg {
    background: linear-gradient(135deg, hsl(var(--background)) 0%, hsl(var(--muted)) 50%, hsl(var(--background)) 100%);
  }

  .educator-gradient {
    @apply bg-gradient-to-br from-slate-700 to-slate-800;
  }

  .student-gradient {
    @apply bg-gradient-to-br from-emerald-600 to-emerald-700;
  }

  .excellence-gradient {
    @apply bg-gradient-to-br from-amber-600 to-amber-700;
  }

  .academic-hover {
    @apply transform transition-all duration-300 hover:scale-105 hover:shadow-xl;
  }

  .academic-glass {
    @apply bg-card/90 backdrop-blur-sm border border-border/50;
  }

  .text-gradient-educator {
    @apply bg-gradient-to-r from-slate-700 to-slate-900 bg-clip-text text-transparent;
  }

  .text-gradient-excellence {
    @apply bg-gradient-to-r from-amber-600 to-amber-800 bg-clip-text text-transparent;
  }

  .text-gradient-student {
    @apply bg-gradient-to-r from-emerald-600 to-emerald-800 bg-clip-text text-transparent;
  }
}

/* Study Animations */
@layer utilities {
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-8px); }
  }

  @keyframes pulse-soft {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  @keyframes glow-blue {
    0%, 100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.3); }
    50% { box-shadow: 0 0 30px rgba(59, 130, 246, 0.5); }
  }

  @keyframes glow-green {
    0%, 100% { box-shadow: 0 0 20px rgba(34, 197, 94, 0.3); }
    50% { box-shadow: 0 0 30px rgba(34, 197, 94, 0.5); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-pulse-soft {
    animation: pulse-soft 2s ease-in-out infinite;
  }

  .animate-glow-blue {
    animation: glow-blue 3s ease-in-out infinite;
  }

  .animate-glow-green {
    animation: glow-green 3s ease-in-out infinite;
  }

  /* Utility Classes */
  .shadow-study {
    box-shadow: 0 4px 6px -1px rgba(59, 130, 246, 0.1), 0 2px 4px -1px rgba(59, 130, 246, 0.06);
  }

  .shadow-study-lg {
    box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.1), 0 4px 6px -2px rgba(59, 130, 246, 0.05);
  }

  .border-study {
    @apply border border-blue-200;
  }

  .bg-study-gradient {
    background: linear-gradient(135deg, #eff6ff 0%, #ecfdf5 50%, #eff6ff 100%);
  }
}

/* Mobile-First Responsive Design */
@media (max-width: 768px) {
  .mobile-padding {
    @apply px-4 py-6;
  }
  
  .mobile-text {
    @apply text-sm leading-relaxed;
  }

  .mobile-card {
    @apply p-4 rounded-xl;
  }

  .mobile-button {
    @apply px-4 py-3 text-sm;
  }
}

/* Focus and Accessibility */
@layer base {
  button:focus-visible,
  input:focus-visible,
  textarea:focus-visible {
    @apply outline-none ring-2 ring-blue-500 ring-offset-2;
  }

  /* High contrast for accessibility */
  @media (prefers-contrast: high) {
    .study-card {
      @apply border-2 border-gray-400;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .interactive-hover {
      @apply transform-none;
    }
    
    .animate-float,
    .animate-pulse-soft,
    .animate-glow-blue,
    .animate-glow-green {
      animation: none;
    }
  }
}
